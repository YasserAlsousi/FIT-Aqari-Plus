@model IEnumerable<PropertyManagement.Core.Entities.Contract>
@{
    ViewData["Title"] = "العقود";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-file-contract me-2"></i>
                    إدارة العقود
                </h1>
                <p class="text-muted">قائمة بجميع عقود الإيجار</p>
            </div>
            <a href="/Contracts/Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                إنشاء عقد جديد
            </a>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="row mb-4">
    <div class="col-md-6">
        <form method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="search" value="@ViewBag.Search" placeholder="البحث في العقود...">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <select class="form-select" onchange="filterByStatus(this.value)">
            <option value="">جميع الحالات</option>
            <option value="true">عقود نشطة</option>
            <option value="false">عقود منتهية</option>
        </select>
    </div>
</div>

<!-- Contracts List -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var contract in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="card-title mb-1">عقد رقم: @contract.ContractNumber</h6>
                                <small class="text-muted">@contract.Property.Title</small>
                            </div>
                            <span class="badge bg-@(contract.IsActive ? "success" : "secondary")">
                                @(contract.IsActive ? "نشط" : "منتهي")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Tenant and Property Info -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">المستأجر:</small>
                                <div class="fw-bold">@contract.Tenant.FirstName @contract.Tenant.LastName</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">المالك:</small>
                                <div class="fw-bold">@contract.Property.Owner.FirstName @contract.Property.Owner.LastName</div>
                            </div>
                        </div>

                        <!-- Contract Dates -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">تاريخ البداية:</small>
                                <div>@contract.StartDate.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">تاريخ النهاية:</small>
                                <div>@contract.EndDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>

                        <!-- Financial Info -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">الإيجار الشهري:</small>
                                <div class="text-primary fw-bold">@contract.MonthlyRent.ToString("N0") جنيه</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">التأمين:</small>
                                <div>@contract.SecurityDeposit.ToString("N0") جنيه</div>
                            </div>
                        </div>

                        <!-- Duration -->
                        <div class="mb-3">
                            <small class="text-muted">مدة العقد:</small>
                            <div>@((contract.EndDate - contract.StartDate).Days / 30) شهر</div>
                        </div>

                        <!-- Progress Bar for Contract Duration -->
                        @{
                            var totalDays = (contract.EndDate - contract.StartDate).Days;
                            var passedDays = (DateTime.Now - contract.StartDate).Days;
                            var progressPercentage = Math.Max(0, Math.Min(100, (passedDays * 100) / totalDays));
                        }
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">تقدم العقد</small>
                                <small class="text-muted">@progressPercentage.ToString("F0")%</small>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-@(contract.IsActive ? "primary" : "secondary")" 
                                     style="width: @progressPercentage%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-between">
                            <a href="/Contracts/Details/@contract.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>
                                عرض
                            </a>
                            <div class="btn-group">
                                <a href="/Contracts/Edit/@contract.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (contract.IsActive)
                                {
                                    <a href="/Payments/Create?contractId=@contract.Id" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-money-bill"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-file-contract text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">لا يوجد عقود مسجلة</h5>
                <p class="text-muted">ابدأ بإنشاء أول عقد إيجار</p>
                <a href="/Contracts/Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    إنشاء عقد جديد
                </a>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<script>
function filterByStatus(status) {
    const url = new URL(window.location);
    if (status) {
        url.searchParams.set('active', status);
    } else {
        url.searchParams.delete('active');
    }
    window.location = url;
}
</script>
