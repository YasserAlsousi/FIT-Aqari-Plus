@model PropertyManagement.Core.Entities.Payment
@{
    ViewData["Title"] = "إيصال الدفع";
    Layout = null; // No layout for printing
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: white;
        }
        .receipt-container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            border: 2px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
        }
        .receipt-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .receipt-body {
            padding: 30px;
        }
        .company-logo {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
        }
        .receipt-number {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .receipt-date {
            opacity: 0.9;
        }
        .info-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .info-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }
        .info-label {
            font-weight: 600;
            color: #666;
        }
        .info-value {
            font-weight: 500;
        }
        .amount-section {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border-radius: 8px;
            padding: 25px;
            text-align: center;
            margin: 30px 0;
        }
        .amount-label {
            font-size: 1.1rem;
            margin-bottom: 10px;
            opacity: 0.9;
        }
        .amount-value {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .status-badge {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }
        .status-paid {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .status-pending {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        .footer-section {
            border-top: 2px solid #eee;
            padding-top: 20px;
            margin-top: 30px;
            text-align: center;
            color: #666;
        }
        .print-button {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
        }
        @@media print {
            .print-button {
                display: none !important;
            }
            .receipt-container {
                border: none;
                margin: 0;
                box-shadow: none;
            }
            body {
                margin: 0;
                padding: 0;
            }
        }
    </style>
</head>
<body>
    <button class="btn btn-primary print-button" onclick="window.print()">
        <i class="fas fa-print me-2"></i>
        طباعة
    </button>

    <div class="receipt-container">
        <!-- Header -->
        <div class="receipt-header">
            <div class="company-logo">
                <i class="fas fa-building"></i>
            </div>
            <h2>نظام إدارة العقارات</h2>
            <div class="receipt-number">إيصال رقم: @Model.ReceiptNumber</div>
            <div class="receipt-date">تاريخ الإصدار: @DateTime.Now.ToString("dd/MM/yyyy")</div>
        </div>

        <!-- Body -->
        <div class="receipt-body">
            <!-- Payment Status -->
            <div class="text-center mb-4">
                @{
                    var statusClass = Model.Status == "Paid" ? "status-paid" : "status-pending";
                    var statusText = Model.Status == "Paid" ? "مدفوع" : "معلق";
                    var statusIcon = Model.Status == "Paid" ? "fa-check-circle" : "fa-clock";
                }
                <span class="status-badge @statusClass">
                    <i class="fas @statusIcon me-2"></i>
                    @statusText
                </span>
            </div>

            <!-- Payment Information -->
            <div class="info-section">
                <h5 class="mb-3">
                    <i class="fas fa-info-circle me-2"></i>
                    معلومات الدفعة
                </h5>
                <div class="info-row">
                    <span class="info-label">نوع الدفعة:</span>
                    <span class="info-value">@Model.PaymentType</span>
                </div>
                <div class="info-row">
                    <span class="info-label">تاريخ الاستحقاق:</span>
                    <span class="info-value">@Model.DueDate.ToString("dd/MM/yyyy")</span>
                </div>
                @if (Model.PaymentDate.HasValue)
                {
                    <div class="info-row">
                        <span class="info-label">تاريخ الدفع:</span>
                        <span class="info-value">@Model.PaymentDate.Value.ToString("dd/MM/yyyy")</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                {
                    <div class="info-row">
                        <span class="info-label">طريقة الدفع:</span>
                        <span class="info-value">@Model.PaymentMethod</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.TransactionReference))
                {
                    <div class="info-row">
                        <span class="info-label">مرجع المعاملة:</span>
                        <span class="info-value">@Model.TransactionReference</span>
                    </div>
                }
            </div>

            <!-- Contract Information -->
            <div class="info-section">
                <h5 class="mb-3">
                    <i class="fas fa-file-contract me-2"></i>
                    معلومات العقد
                </h5>
                <div class="info-row">
                    <span class="info-label">رقم العقد:</span>
                    <span class="info-value">@Model.Contract.ContractNumber</span>
                </div>
                <div class="info-row">
                    <span class="info-label">العقار:</span>
                    <span class="info-value">@Model.Contract.Property.Title</span>
                </div>
                <div class="info-row">
                    <span class="info-label">عنوان العقار:</span>
                    <span class="info-value">@Model.Contract.Property.Address</span>
                </div>
            </div>

            <!-- Tenant Information -->
            <div class="info-section">
                <h5 class="mb-3">
                    <i class="fas fa-user me-2"></i>
                    معلومات المستأجر
                </h5>
                <div class="info-row">
                    <span class="info-label">الاسم:</span>
                    <span class="info-value">@Model.Contract.Tenant.FirstName @Model.Contract.Tenant.LastName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">رقم الهاتف:</span>
                    <span class="info-value">@Model.Contract.Tenant.Phone</span>
                </div>
                <div class="info-row">
                    <span class="info-label">البريد الإلكتروني:</span>
                    <span class="info-value">@Model.Contract.Tenant.Email</span>
                </div>
            </div>

            <!-- Owner Information -->
            <div class="info-section">
                <h5 class="mb-3">
                    <i class="fas fa-user-tie me-2"></i>
                    معلومات المالك
                </h5>
                <div class="info-row">
                    <span class="info-label">الاسم:</span>
                    <span class="info-value">@Model.Contract.Property.Owner.FirstName @Model.Contract.Property.Owner.LastName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">رقم الهاتف:</span>
                    <span class="info-value">@Model.Contract.Property.Owner.Phone</span>
                </div>
                <div class="info-row">
                    <span class="info-label">البريد الإلكتروني:</span>
                    <span class="info-value">@Model.Contract.Property.Owner.Email</span>
                </div>
            </div>

            <!-- Amount Section -->
            <div class="amount-section">
                <div class="amount-label">المبلغ المدفوع</div>
                <div class="amount-value">@Model.Amount.ToString("N0") جنيه</div>
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="info-section">
                    <h5 class="mb-3">
                        <i class="fas fa-sticky-note me-2"></i>
                        ملاحظات
                    </h5>
                    <p class="mb-0">@Model.Notes</p>
                </div>
            }

            <!-- Footer -->
            <div class="footer-section">
                <p class="mb-2">
                    <strong>شكراً لكم على التعامل معنا</strong>
                </p>
                <p class="mb-0">
                    <small>
                        تم إنشاء هذا الإيصال تلقائياً بواسطة نظام إدارة العقارات
                        <br>
                        تاريخ الطباعة: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Auto print when page loads (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>
