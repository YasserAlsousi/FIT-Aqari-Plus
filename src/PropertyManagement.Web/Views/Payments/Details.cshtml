@model PropertyManagement.Core.Entities.Payment
@{
    ViewData["Title"] = "تفاصيل الدفعة";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                <li class="breadcrumb-item"><a href="/Payments">المدفوعات</a></li>
                <li class="breadcrumb-item active">@Model.ReceiptNumber</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-receipt me-2"></i>
                    إيصال رقم: @Model.ReceiptNumber
                </h1>
                <p class="text-muted mb-0">@Model.PaymentType</p>
            </div>
            <div class="btn-group">
                @if (Model.Status != "Paid")
                {
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#markAsPaidModal">
                        <i class="fas fa-check me-2"></i>
                        تسجيل كمدفوع
                    </button>
                }
                <a href="/Payments/Receipt/@Model.Id" class="btn btn-info">
                    <i class="fas fa-print me-2"></i>
                    طباعة الإيصال
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Payment Details -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        تفاصيل الدفعة
                    </h6>
                    @{
                        var statusClass = Model.Status switch
                        {
                            "Paid" => "success",
                            "Pending" => "warning",
                            "Overdue" => "danger",
                            _ => "secondary"
                        };
                        var statusText = Model.Status switch
                        {
                            "Paid" => "مدفوع",
                            "Pending" => "معلق",
                            "Overdue" => "متأخر",
                            _ => Model.Status
                        };
                    }
                    <span class="badge bg-@statusClass fs-6">@statusText</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">رقم الإيصال:</label>
                        <div class="fw-bold">@Model.ReceiptNumber</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">نوع الدفعة:</label>
                        <div>@Model.PaymentType</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">المبلغ:</label>
                        <h4 class="text-primary mb-0">@Model.Amount.ToString("N0") جنيه</h4>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">تاريخ الاستحقاق:</label>
                        <div class="fw-bold">@Model.DueDate.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">تاريخ الدفع:</label>
                        <div>
                            @if (Model.PaymentDate.HasValue)
                            {
                                <span class="fw-bold text-success">@Model.PaymentDate.Value.ToString("dd/MM/yyyy")</span>
                            }
                            else
                            {
                                <span class="text-muted">لم يتم الدفع بعد</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">تاريخ الإنشاء:</label>
                        <div>@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                {
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">طريقة الدفع:</label>
                            <div>@Model.PaymentMethod</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.TransactionReference))
                        {
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">مرجع المعاملة:</label>
                                <div>@Model.TransactionReference</div>
                            </div>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">ملاحظات:</label>
                        <div class="border rounded p-3 bg-light">
                            @Model.Notes
                        </div>
                    </div>
                }

                <!-- Payment Status Timeline -->
                <div class="mb-3">
                    <label class="form-label text-muted">حالة الدفعة:</label>
                    <div class="d-flex align-items-center">
                        @if (Model.Status == "Paid")
                        {
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <span class="text-success">تم الدفع بنجاح</span>
                                @if (Model.PaymentDate.HasValue)
                                {
                                    <small class="text-muted ms-2">في @Model.PaymentDate.Value.ToString("dd/MM/yyyy")</small>
                                }
                            </div>
                        }
                        else if (Model.Status == "Overdue")
                        {
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                <span class="text-danger">متأخر عن الموعد</span>
                                <small class="text-muted ms-2">منذ @((DateTime.Now - Model.DueDate).Days) يوم</small>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock text-warning me-2"></i>
                                <span class="text-warning">في انتظار الدفع</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Contract Information -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-file-contract me-2"></i>
                    معلومات العقد المرتبط
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">رقم العقد:</label>
                        <div class="fw-bold">@Model.Contract.ContractNumber</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">العقار:</label>
                        <div>@Model.Contract.Property.Title</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">المستأجر:</label>
                        <div>@Model.Contract.Tenant.FirstName @Model.Contract.Tenant.LastName</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">الإيجار الشهري:</label>
                        <div class="text-primary fw-bold">@Model.Contract.MonthlyRent.ToString("N0") جنيه</div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <a href="/Contracts/Details/@Model.Contract.Id" class="btn btn-outline-primary">
                        <i class="fas fa-eye me-1"></i>
                        عرض تفاصيل العقد
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Actions -->
        @if (Model.Status != "Paid")
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        إجراءات سريعة
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#markAsPaidModal">
                            <i class="fas fa-check me-2"></i>
                            تسجيل كمدفوع
                        </button>
                        <a href="/Payments/Edit/@Model.Id" class="btn btn-outline-warning">
                            <i class="fas fa-edit me-2"></i>
                            تعديل الدفعة
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Payment Summary -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-calculator me-2"></i>
                    ملخص الدفعة
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>المبلغ الأساسي:</span>
                    <span>@Model.Amount.ToString("N0") جنيه</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>الحالة:</span>
                    <span class="badge bg-@statusClass">@statusText</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold">
                    <span>الإجمالي:</span>
                    <span class="text-primary">@Model.Amount.ToString("N0") جنيه</span>
                </div>
            </div>
        </div>

        <!-- Tenant Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>
                    معلومات المستأجر
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar-sm bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">@Model.Contract.Tenant.FirstName @Model.Contract.Tenant.LastName</h6>
                        <small class="text-muted">@Model.Contract.Tenant.Phone</small>
                    </div>
                </div>

                <div class="d-grid">
                    <a href="/Tenants/Details/@Model.Contract.Tenant.Id" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-eye me-1"></i>
                        عرض تفاصيل المستأجر
                    </a>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Payments/Receipt/@Model.Id" class="btn btn-info">
                        <i class="fas fa-print me-2"></i>
                        طباعة الإيصال
                    </a>
                    <a href="/Payments" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        العودة للقائمة
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mark as Paid Modal -->
@if (Model.Status != "Paid")
{
    <div class="modal fade" id="markAsPaidModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تسجيل الدفعة كمدفوعة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="MarkAsPaid" asp-route-id="@Model.Id" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">مرجع المعاملة (اختياري):</label>
                            <input type="text" name="transactionReference" class="form-control" placeholder="رقم الشيك أو رقم التحويل">
                        </div>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            سيتم تسجيل تاريخ اليوم كتاريخ الدفع
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="submit" class="btn btn-success">تسجيل كمدفوع</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 14px;
}
</style>
