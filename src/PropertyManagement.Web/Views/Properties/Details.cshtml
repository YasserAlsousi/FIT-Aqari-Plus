@model PropertyManagement.Core.Entities.Property
@{
    ViewData["Title"] = Model.Title;
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                <li class="breadcrumb-item"><a href="/Properties">العقارات</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">@Model.Title</h1>
                <p class="text-muted mb-0">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    @Model.Address
                </p>
            </div>
            <div class="btn-group">
                <a href="/Properties/Edit/@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    تعديل
                </a>
                @if (Model.Status == "Available")
                {
                    <a href="/Contracts/Create?propertyId=@Model.Id" class="btn btn-success">
                        <i class="fas fa-file-contract me-2"></i>
                        إنشاء عقد
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Property Images -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                            <div class="text-center">
                                <i class="fas fa-image text-muted mb-2" style="font-size: 3rem;"></i>
                                <p class="text-muted">صور العقار</p>
                                <small class="text-muted">سيتم إضافة نظام رفع الصور قريباً</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Property Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-align-left me-2"></i>
                        وصف العقار
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Description</p>
                </div>
            </div>
        }

        <!-- Current Contract -->
        @if (Model.Contracts.Any(c => c.IsActive))
        {
            var activeContract = Model.Contracts.First(c => c.IsActive);
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-file-contract me-2"></i>
                        العقد الحالي
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">رقم العقد:</label>
                                <div>@activeContract.ContractNumber</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">المستأجر:</label>
                                <div>@activeContract.Tenant.FirstName @activeContract.Tenant.LastName</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">تاريخ البداية:</label>
                                <div>@activeContract.StartDate.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">تاريخ النهاية:</label>
                                <div>@activeContract.EndDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a href="/Contracts/Details/@activeContract.Id" class="btn btn-outline-primary">
                            <i class="fas fa-eye me-1"></i>
                            عرض تفاصيل العقد
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <!-- Property Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        معلومات العقار
                    </h6>
                    <span class="badge bg-@(Model.Status == "Available" ? "success" : Model.Status == "Rented" ? "warning" : "secondary")">
                        @(Model.Status == "Available" ? "متاح" : Model.Status == "Rented" ? "مؤجر" : "صيانة")
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted">نوع العقار:</label>
                    <div>@Model.PropertyType</div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">المساحة:</label>
                    <div>@Model.Area م²</div>
                </div>

                <div class="row mb-3">
                    <div class="col-4">
                        <label class="form-label text-muted">غرف النوم:</label>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.Bedrooms</h5>
                        </div>
                    </div>
                    <div class="col-4">
                        <label class="form-label text-muted">الحمامات:</label>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.Bathrooms</h5>
                        </div>
                    </div>
                    <div class="col-4">
                        <label class="form-label text-muted">الطابق:</label>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.Floor</h5>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">المرافق:</label>
                    <div>
                        @if (Model.HasParking)
                        {
                            <span class="badge bg-success me-1">موقف سيارة</span>
                        }
                        @if (Model.HasElevator)
                        {
                            <span class="badge bg-success me-1">مصعد</span>
                        }
                        @if (Model.HasBalcony)
                        {
                            <span class="badge bg-success me-1">شرفة</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-money-bill-wave me-2"></i>
                    المعلومات المالية
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted">الإيجار الشهري:</label>
                    <h4 class="text-primary mb-0">@Model.MonthlyRent.ToString("N0") جنيه</h4>
                </div>

                @if (Model.SecurityDeposit.HasValue && Model.SecurityDeposit > 0)
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">مبلغ التأمين:</label>
                        <div>@Model.SecurityDeposit.Value.ToString("N0") جنيه</div>
                    </div>
                }
            </div>
        </div>

        <!-- Owner Info -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>
                    معلومات المالك
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar-sm bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">@Model.Owner.FirstName @Model.Owner.LastName</h6>
                        <small class="text-muted">@Model.Owner.Phone</small>
                    </div>
                </div>
                <div class="d-grid">
                    <a href="/Owners/Details/@Model.Owner.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>
                        عرض تفاصيل المالك
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <a href="/Properties" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                العودة للقائمة
            </a>
            <div class="btn-group">
                <a href="/Properties/Edit/@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    تعديل العقار
                </a>
                @if (Model.Status == "Available")
                {
                    <a href="/Contracts/Create?propertyId=@Model.Id" class="btn btn-success">
                        <i class="fas fa-file-contract me-2"></i>
                        إنشاء عقد إيجار
                    </a>
                }
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash me-2"></i>
                    حذف العقار
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف هذا العقار؟</p>
                @if (Model.Contracts.Any(c => c.IsActive))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        تحذير: لا يمكن حذف عقار له عقود نشطة
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                @if (!Model.Contracts.Any(c => c.IsActive))
                {
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">حذف</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 14px;
}
</style>
