@model PropertyManagement.Core.Entities.Tenant
@{
    ViewData["Title"] = "تفاصيل المستأجر";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                <li class="breadcrumb-item"><a href="/Tenants">المستأجرين</a></li>
                <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="fas fa-user me-2"></i>
                @Model.FirstName @Model.LastName
            </h1>
            <div class="btn-group">
                <a href="/Tenants/Edit/@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    تعديل
                </a>
                <a href="/Contracts/Create?tenantId=@Model.Id" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>
                    إنشاء عقد
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <!-- Tenant Info Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    معلومات المستأجر
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar-lg bg-success text-white rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-user" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted">@Model.NationalId</p>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">البريد الإلكتروني:</label>
                    <div>@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">رقم الهاتف:</label>
                    <div>@Model.Phone</div>
                </div>

                @if (Model.DateOfBirth.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">تاريخ الميلاد:</label>
                        <div>@Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">العنوان:</label>
                        <div>@Model.Address</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Occupation))
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">المهنة:</label>
                        <div>@Model.Occupation</div>
                    </div>
                }

                @if (Model.MonthlyIncome.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">الدخل الشهري:</label>
                        <div>@Model.MonthlyIncome.Value.ToString("N0") جنيه</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.EmergencyContact))
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">جهة اتصال الطوارئ:</label>
                        <div>@Model.EmergencyContact</div>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label text-muted">تاريخ التسجيل:</label>
                    <div>@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    إحصائيات
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4 class="text-primary">@Model.Contracts.Count</h4>
                        <small class="text-muted">إجمالي العقود</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">@Model.Contracts.Count(c => c.IsActive)</h4>
                        <small class="text-muted">عقود نشطة</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Active Contracts -->
        @if (Model.Contracts.Any(c => c.IsActive))
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-file-contract me-2"></i>
                        العقود النشطة
                    </h6>
                </div>
                <div class="card-body">
                    @foreach (var contract in Model.Contracts.Where(c => c.IsActive))
                    {
                        <div class="card border mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="card-title mb-1">@contract.ContractNumber</h6>
                                        <p class="text-muted mb-0">@contract.Property.Title</p>
                                    </div>
                                    <span class="badge bg-success">نشط</span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">تاريخ البداية:</small>
                                        <div>@contract.StartDate.ToString("dd/MM/yyyy")</div>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">تاريخ النهاية:</small>
                                        <div>@contract.EndDate.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div>
                                        <small class="text-muted">الإيجار الشهري:</small>
                                        <div class="fw-bold text-primary">@contract.MonthlyRent.ToString("N0") جنيه</div>
                                    </div>
                                    <a href="/Contracts/Details/@contract.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>
                                        عرض التفاصيل
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Contract History -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>
                        تاريخ العقود (@Model.Contracts.Count)
                    </h6>
                    <a href="/Contracts/Create?tenantId=@Model.Id" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        إنشاء عقد جديد
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Contracts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>رقم العقد</th>
                                    <th>العقار</th>
                                    <th>تاريخ البداية</th>
                                    <th>تاريخ النهاية</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model.Contracts.OrderByDescending(c => c.StartDate))
                                {
                                    <tr>
                                        <td>@contract.ContractNumber</td>
                                        <td>@contract.Property.Title</td>
                                        <td>@contract.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>@contract.EndDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(contract.IsActive ? "success" : "secondary")">
                                                @(contract.IsActive ? "نشط" : "منتهي")
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/Contracts/Details/@contract.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-contract text-muted mb-3" style="font-size: 2rem;"></i>
                        <h6 class="text-muted">لا يوجد عقود مسجلة</h6>
                        <p class="text-muted">ابدأ بإنشاء أول عقد لهذا المستأجر</p>
                        <a href="/Contracts/Create?tenantId=@Model.Id" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            إنشاء عقد جديد
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <a href="/Tenants" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                العودة للقائمة
            </a>
            <div class="btn-group">
                <a href="/Tenants/Edit/@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    تعديل المستأجر
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash me-2"></i>
                    حذف المستأجر
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف هذا المستأجر؟</p>
                @if (Model.Contracts.Any(c => c.IsActive))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        تحذير: لا يمكن حذف مستأجر له عقود نشطة
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                @if (!Model.Contracts.Any(c => c.IsActive))
                {
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">حذف</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
.avatar-lg {
    width: 80px;
    height: 80px;
    font-size: 1.5rem;
}
</style>
