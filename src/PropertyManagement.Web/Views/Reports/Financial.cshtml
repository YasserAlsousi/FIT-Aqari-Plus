@model PropertyManagement.Web.Models.FinancialReportViewModel
@{
    ViewData["Title"] = "التقرير المالي";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-dollar-sign me-2"></i>
            التقرير المالي
        </h1>
        <div class="btn-group" role="group">
            <a href="/Reports" class="btn btn-secondary">
                <i class="fas fa-arrow-right me-1"></i>
                العودة للتقارير
            </a>
            <button class="btn btn-success" onclick="window.print()">
                <i class="fas fa-print me-1"></i>
                طباعة
            </button>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">فلترة التاريخ</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i>
                        تطبيق الفلتر
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                إجمالي الإيرادات
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalRevenue.ToString("C") EGP</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                المبالغ المعلقة
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingAmount.ToString("C") EGP</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                المبالغ المتأخرة
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverdueAmount.ToString("C") EGP</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                معدل التحصيل
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CollectionRate.ToString("F1")%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-percentage fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">تفاصيل المدفوعات (@Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy"))</h6>
        </div>
        <div class="card-body">
            @if (Model.Payments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>رقم الإيصال</th>
                                <th>العقار</th>
                                <th>المستأجر</th>
                                <th>النوع</th>
                                <th>المبلغ</th>
                                <th>تاريخ الاستحقاق</th>
                                <th>تاريخ الدفع</th>
                                <th>الحالة</th>
                                <th>طريقة الدفع</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td>@payment.ReceiptNumber</td>
                                    <td>
                                        @if (payment.Contract?.Property != null)
                                        {
                                            <span>@payment.Contract.Property.Title</span><br>
                                            <small class="text-muted">@payment.Contract.Property.Address</small>
                                        }
                                    </td>
                                    <td>
                                        @if (payment.Contract?.Tenant != null)
                                        {
                                            <span>@payment.Contract.Tenant.FirstName @payment.Contract.Tenant.LastName</span><br>
                                            <small class="text-muted">@payment.Contract.Tenant.Phone</small>
                                        }
                                    </td>
                                    <td>@payment.PaymentType</td>
                                    <td><strong>@payment.Amount.ToString("C") EGP</strong></td>
                                    <td>@payment.DueDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (payment.PaymentDate.HasValue)
                                        {
                                            @payment.PaymentDate.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">لم يتم الدفع</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (payment.Status)
                                        {
                                            case "Paid":
                                                <span class="badge bg-success">مدفوع</span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">معلق</span>
                                                break;
                                            case "Overdue":
                                                <span class="badge bg-danger">متأخر</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@payment.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.PaymentMethod))
                                        {
                                            @payment.PaymentMethod
                                        }
                                        else
                                        {
                                            <span class="text-muted">غير محدد</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <th colspan="4">الإجمالي</th>
                                <th>@Model.Payments.Sum(p => p.Amount).ToString("C") EGP</th>
                                <th colspan="4"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">لا توجد مدفوعات</h5>
                    <p class="text-muted">لم يتم العثور على أي مدفوعات في الفترة المحددة.</p>
                </div>
            }
        </div>
    </div>

    <!-- Financial Analysis -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">التحليل المالي</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>إجمالي المدفوعات المسددة</td>
                                    <td class="text-end"><strong class="text-success">@Model.TotalRevenue.ToString("C") EGP</strong></td>
                                </tr>
                                <tr>
                                    <td>المدفوعات المعلقة</td>
                                    <td class="text-end"><span class="text-warning">@Model.PendingAmount.ToString("C") EGP</span></td>
                                </tr>
                                <tr>
                                    <td>المدفوعات المتأخرة</td>
                                    <td class="text-end"><span class="text-danger">@Model.OverdueAmount.ToString("C") EGP</span></td>
                                </tr>
                                <tr class="border-top">
                                    <td><strong>إجمالي المبالغ المستحقة</strong></td>
                                    <td class="text-end"><strong>@((Model.TotalRevenue + Model.PendingAmount + Model.OverdueAmount)).ToString("C") EGP</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>معدل التحصيل</strong></td>
                                    <td class="text-end"><strong class="text-info">@Model.CollectionRate.ToString("F1")%</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">توزيع المدفوعات</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="paymentStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Payment Status Chart
        const ctx = document.getElementById('paymentStatusChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['مدفوع', 'معلق', 'متأخر'],
                datasets: [{
                    data: [@Model.TotalRevenue, @Model.PendingAmount, @Model.OverdueAmount],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
